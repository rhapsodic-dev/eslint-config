{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "minimumReleaseAge": "14 days"
    },
    {
      "enabled": false,
      "matchDepTypes": [
        "peerDependencies"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "minimumReleaseAge": "0 days"
  }
}
