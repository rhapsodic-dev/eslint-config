{
  "name": "@rhapsodic/eslint-config",
  "type": "module",
  "version": "1.0.2",
  "packageManager": "pnpm@10.27.0",
  "description": "Rhapsodic's ESLint config",
  "author": "Svyatoslav Fyodorov <intelrug@gmail.com> (https://github.com/intelrug/)",
  "license": "MIT",
  "homepage": "https://github.com/rhapsodic-dev/eslint-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rhapsodic-dev/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/rhapsodic-dev/eslint-config/issues"
  },
  "keywords": [
    "eslint-config"
  ],
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "nr gen && tsdown --clean --dts",
    "stub": "tsdown",
    "dev": "npx @eslint/config-inspector --config eslint.config.ts",
    "build:inspector": "pnpm build && npx @eslint/config-inspector build",
    "watch": "tsdown --watch",
    "lint": "eslint",
    "format": "eslint --fix",
    "gen": "tsx scripts/typegen.ts",
    "prepack": "nr build",
    "release": "bumpp",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "eslint": "^9.35.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-plugin-vuejs-accessibility": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "dependencies": {
    "@antfu/install-pkg": "^1.1.0",
    "@clack/prompts": "^0.11.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint-flat-config-utils": "^2.1.4",
    "eslint-merge-processors": "^2.0.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-vue": "^10.6.2",
    "eslint-processor-vue-blocks": "^2.0.0",
    "globals": "^16.5.0",
    "local-pkg": "^1.1.2",
    "vue-eslint-parser": "^10.2.0"
  },
  "devDependencies": {
    "@rhapsodic/eslint-config": "workspace:*",
    "@antfu/ni": "^28.0.0",
    "@eslint/config-inspector": "^1.4.2",
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "eslint-typegen": "^2.3.0",
    "execa": "^9.6.0",
    "lint-staged": "^16.2.7",
    "pnpm-workspace-yaml": "^1.3.0",
    "simple-git-hooks": "^2.13.1",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.18.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10",
    "vue": "^3.5.24"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
